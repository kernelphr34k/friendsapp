
    <div class="p-5 mb-4 bg-light rounded-3 border rounded-25">
      <div class="container-fluid">
        <h1 class="display-6 fw-bold">
        <%= @friend.first_name %>
        <%= @friend.last_name %>
        </h1>
        <p class="lead">
            <%= @friend.email %>  | 
            <%= @friend.phone %>  |  
            <%= @friend.twitter %>
        </p>
          <br/>
          <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
          <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
          <br /> <br />
          <td> <%= button_to 'Delete', @friend, method: :delete, data: { turbo_confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm" %></td>

      </div>
    </div>